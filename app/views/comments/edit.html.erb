<h1>Edit Note for <%= @comment.book.title %> </h1>

<%= render partial: 'layouts/errors', locals: {object: @comment} %> <!-- look for the errors partial to tell user the problems, passing 'comment' in to replace 'object' -->

<%= form_for(@comment) do |f|%>

    <%= f.label :chapter %>
    <%= f.number_field :chapter %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.hidden_field :book_id %> <!-- keeps the comment related to the book -->

    <%= f.submit %>

<% end %>