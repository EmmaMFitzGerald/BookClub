<% if @books.blank? %>

     <p>This Book Doesn't have any notes yet. <%=link_to "Click here", new_book_comments_path(@book)%> to add one!<p>     

<% else %>
        <h1><%= @book.title %>'s Notes</h1>
        <p><% @book.comments.each do |comment| %></p>
        <p>Chapter: <%= comment.chapter %></p>
        <p>Notes: <%= comment.content %></p>
        <%= link_to "Add Another Note For Book: #{@book.title}", new_comment_path%>
        <%= link_to "Edit Notes" , edit_comment_path(comment)%>
        <%= link_to "Delete Note", comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete this note?" } %>
        <% end %>
<%end%>
