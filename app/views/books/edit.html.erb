<h1>Edit <%= @book.title %>

<%= render partial: 'layouts/errors', locals: {object: @book} %> <!-- look for the errors partial to tell user the problems if the edit can't save -->

<%= form_for(@book) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br><br>
    <%= f.label :author %>
    <%= f.text_field :author %>
    <br><br>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <br><br>
    <%= f.label :blurb %>
    <%= f.text_field :blurb %>
    <br><br>
    <%= f.submit %>

<% end %>
