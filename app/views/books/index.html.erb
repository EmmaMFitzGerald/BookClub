<% if @books.any? %> <!-- making sure that the user has books to display -->

    <% @books.each do |book| %> 

        <div>
        <h2><%= link_to book.title, book_comments_path(book.id) %></h2>
        <p>By: <%= book.author %><p>
        <p>Genre: <%= book.genre %><p>
        <p>Blurb: <%= book.blurb %></p>
        <p>Added by: <%=book.user.username %>
        <p><%= link_to "Add a Comment", new_book_comments_path(book.id) %> <!-- Pass in the book id as an argument to determine what url to go to-->
        <% if current_user == book.user %> <!-- only allowed edit/delete your books -->
            <p><%= link_to "Edit Book", edit_book_path(book.id) %>
            <p><%= link_to "Delete Book", book_path(book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" } %>
        <% end %>
        </div>

    <% end %>

<% else %> <!-- What to do if theuser doesn't have any favourite books yet -->

    <h2>You haven't added any books yet, click <%=link_to "here", new_book_path %> to add you favourite</h2>

<% end %>   