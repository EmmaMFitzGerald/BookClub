

<% if @books.any? %>

    <h1><%= current_user.username %>'s Books </h1>

    <% @books.each do |book| %> 
    
        <div>
        <h2><%= link_to book.title, book_path(book.id) %></h2>
        <h3>By: <%= book.author %></h3>
        <p>Genre: <%= book.genre %><p>
        <p>Blurb: <%= book.blurb %></p>
        <p><%= link_to "Add a Note", new_book_comments_path(book.id) %> <!-- Pass in the book id as an argument to determine what url to go to-->
        <p><%= link_to "Edit Book", edit_book_path(book.id) %>
        <p><%= link_to "Delete Book", book_path(book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" } %>
        </div>

    <% end %>

<% else %>

    <h2>Welcome <%= current_user. username%>!</h2>

    <h2>You haven't added any books yet, <%=link_to "click here", new_book_path %> to add you favourite!</h2>

<% end %>